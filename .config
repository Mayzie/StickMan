# Stickman 

[Stickman]
Width=1024		; Width of the viewport (in pixels)
Height=768		; Height of the viewport (in pixels)
ImagesDir=./images/	; Directory that contains all of the image files
FPS=30			; Number of frames per second

[Background]
Image=background2.png	; Background image (relative to ImagesDir)

[Player]
X=5			; Starting X position (percentage of viewport width)
Y=5			; Starting Y position (percentage of viewport height, from bottom)
WalkRightVelocity=-2	; Percentage viewport should move each frame
WalkRight=walk01.png+walk02.png+walk03.png+walk04.png+walk05.png+walk06.png+walk07.png+walk08.png+walk09.png+walk10.png+walk11.png	; Walking animation (separate with '+')
DefaultSize=Normal	; Starting size

[Sizes]
Sizes=Tiny+Normal+Large+Huge	; List of sizes (separate with '+')

[SizeTiny]
Scale=0.5

[SizeNormal]
Scale=1.0

[SizeLarge]
Scale=1.5

[SizeHuge]
Scale=2.0
